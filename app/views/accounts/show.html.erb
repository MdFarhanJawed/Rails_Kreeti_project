<h2 align="center">Title: <%= @account.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @account.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:</li>
          <li><%= link_to gravatar_for(@account.user), user_path(@account.user) %></li>
          <li class="account-title">
            <%= link_to @account.user.username, user_path(@account.user) %>
          </li>
          <li><small>
            <%= pluralize(@account.user.accounts.count, "account") if @account.user.accounts %>
          </small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
 
  <div class="account-actions">
    <% if logged_in? && ( current_user.admin?) %>
      <%= link_to "Edit this account", edit_account_path(@account), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this account", account_path(@account), method: :delete, 
                                        data: { confirm: "Are you sure you want to delete the account?"}, 
                                        class: "btn btn-xs btn-danger" %>
    <% end %>
    <%= link_to "View all account", accounts_path, class: "btn btn-xs btn-success" %>
  </div>
</div>